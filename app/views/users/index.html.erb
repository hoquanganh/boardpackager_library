<h2>User Manager</h2>

<table class="table">
  <thead>
    <tr>
      <th>Role</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.admin? ? 'Admin' : 'User' %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
